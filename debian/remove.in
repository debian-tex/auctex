#include "variables"
#!/bin/bash -e
#
# elisp remove file for Debian <:=$PACKAGE:> package.
# $Id: remove.in,v 1.9 2001/06/16 11:45:34 salve Exp $
#
<:=@COPYRIGHT:>//

set -o posix

FLAVOR=$1

case "$FLAVOR" in
    emacs)
	:
    ;;
    emacs20|emacs21|mule2)
	echo -n "remove/<:=$PACKAGE:>: Removing for $FLAVOR... "
	rm -f <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/{*.elc,<:=$ELCLOG:>.gz}
	rm -f <:=if($_=$style)=~s|emacs|\$FLAVOR|:>/*.elc
	rm -f <:=if($_=$style)=~s|emacs|\$FLAVOR|:>/.nosearch
	rmdir --ignore-fail-on-non-empty \
	    <:=if($_=$style)=~s|emacs|\$FLAVOR|:> || true
	rmdir --ignore-fail-on-non-empty \
	    <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:> || true
	echo "done."
    ;;
    *)
	echo "remove/<:=$PACKAGE:>: Ignoring emacsen flavor $FLAVOR."
    ;;
esac

exit 0
<:
# Local Variables:
# mode: shell-script
# End:
:>//
