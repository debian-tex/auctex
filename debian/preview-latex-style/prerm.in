#include "variables"
#! /bin/bash -e
#
# <% postinst %> script for <:=${PLSPKG}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    (deconfigure|remove|upgrade)
    <:# deregister documentation with <% doc-base %> :>//
    <:=${DREMOVE}:> <:=${PLSPKG}:>
    ;;
    (failed-upgrade)
    <:# register documentation with <% doc-base %> :>//
    <:=${DINSTALL}:> <:=if($_="${docbase}/${PLSPKG}")=~tr|/|/|s:>
    ;;
    (*) echo >&2 "${0##*/}/<:=${PACKAGE}:>:" \
	"Unknown argument: \"${1}\"."
    ;;
esac

exit 0
