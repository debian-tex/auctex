#include "variables"
#! /bin/bash -e
#
# <% postrm %> script for <:=${PLSPKG}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    (remove|upgrade|failed-upgrade)
    <:# rebuild the <% TeX ls-R %> database :>
    <:=${MKTEXLSR}:>
    ;;
    (abort-install|abort-upgrade)
    <:# rebuild the <% TeX ls-R %> database :>
    <:=${MKTEXLSR}:>
    ;;
    (disappear|purge)
    :
    ;;
    (*) echo >&2 "${0##*/}/<:=${PLSPKG}:>:" \
	"Unknown argument: \"${1}\"."
    exit 1
    ;;
esac

exit 0
