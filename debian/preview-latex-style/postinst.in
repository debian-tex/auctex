#include "variables"
#! /bin/bash -e
#
# <% postinst %> script for <:=${PLSPKG}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    abort-deconfigure|abort-remove|abort-upgrade|configure) :;;
    *) echo >&2 "${0##*/}/<:=${PLSPKG}:>:" \
	"Unknown argument: \"${1}\"."
	exit 1
esac

<:# rebuild the <% TeX ls-R %> database :>
case "${1}" in abort-remove|configure)
	<:=${MKTEXLSR}:>
esac

<:# register documentation with <% doc-base %> :>//
case "${1}" in abort-remove|abort-upgrade|configure)
	<:=${DINSTALL}:> <:=if($_="${docbase}/${PLSPKG}")=~tr|/|/|s:>
esac

exit 0
