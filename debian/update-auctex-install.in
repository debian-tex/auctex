#include "variables"
#!/bin/bash -e
#
# Update AUCTeX installation.
# Installed by the Debian <:=${PACKAGE}:> package.
# $Id: update-auctex-install.in,v 1.1 2004/05/19 09:29:47 salve Exp $
#
<:=@COPYRIGHT:>//

set -o posix

<:# parse debconf database:>//
source <:=${CONFMODULE}:>
db_version 2.0

<:# Default flavors: only GNU/Emacsen, XEmacs comes with its own AUCTeX.:>//
FLAVORS=${*:-"emacs21 emacs-snapshot"}

for FLAVOR in ${FLAVORS}; do
    if [ -x /usr/bin/${FLAVOR} ]; then
	LOGFILE=$(mktemp <:=${TMPMASK}:>)
	db_set <:=${PACKAGE}:>/logfile ${LOGFILE} || true
	<:=${ecode}:>/remove/<:=${PACKAGE}:> ${FLAVOR}
	<:=${ecode}:>/install/<:=${PACKAGE}:> ${FLAVOR}
    fi
done

<:
# Local Variables:
# mode: shell-script
# End:
:>//
