#include "variables"
#!/bin/bash -e
#
# elisp install file for Debian <:=$PACKAGE:> package.
# $Id: install.in,v 1.9 2000/11/15 16:29:50 salve Exp $
#
<:=@COPYRIGHT:>//

set -o posix

FLAVOR=$1

EFLAGS="--no-site-file --no-init-file --batch --load=lpath.el --funcall=batch-byte-compile"
EMULEFLAGS="--no-site-file --no-init-file --batch  --load=lpath-jp.el --funcall=batch-byte-compile"

# This shouldn't compile without X, and we have font-latex.el anyway: <:=$XSRC:>.

case "$FLAVOR" in
    emacs)
	:
    ;;
    emacs20|mule2)
	echo -n "install/<:=$PACKAGE:>: Byte-compiling for $FLAVOR... "
	install -m 755 -d <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:> \
	    <:=if($_=$style)=~s|emacs|\$FLAVOR|:>
	# This one prevents $style from being added to load-path by
        # normal-top-level-add-subdirs-to-load-path (see subdirs.el)
	(umask 022 && touch <:=if($_=$style)=~s|emacs|\$FLAVOR|:>/.nosearch)
	for i in <:=$SOURCES:> <:=$STYLES:>
	    do cp <:=$lisp:>/$i <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/$i
	done
	cat <<-EOF ><:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/lpath.el
		(setq load-path (cons "." load-path)
		    TeX-lisp-directory "<none>")
	EOF
	(cd <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:> \
	    && $FLAVOR $EFLAGS <:=$SOURCES:> <:=$STYLES:> 2>&1 \
	    | gzip -9qf > <:=$ELCLOG:>.gz)
	# We don't support emacs19 anymore (only emacs20), but let's leave it as it is.
	if [ "$FLAVOR" = "emacs20" -o "$FLAVOR" = "mule2" ]; then
		# We have MULE.
		for i in <:=$MULESRC:>
		    do cp <:=$lisp:>/$i \
			<:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/$i
		done
		# This contains an hack to allow byte-compiling
		# with japanese multibyte chars
		cat <<-EOF ><:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/lpath-jp.el
			(setq load-path (cons "." load-path)
				TeX-lisp-directory "<none>")
			(set-language-environment 'Japanese);') <- beauty stuff
		EOF
		(cd <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:> \
		    && $FLAVOR $EMULEFLAGS <:=$MULESRC:> 2>&1 \
		    | gzip -9qf >> <:=$ELCLOG:>.gz)
	fi
	rm -f <:=if($_=$lisp)=~s|emacs|\$FLAVOR|:>/*.el \
	    <:=if($_=$style)=~s|emacs|\$FLAVOR|:>/*.el
	echo "done."
    ;;
    *)
	echo "install/<:=$PACKAGE:>: Ignoring emacsen flavor $FLAVOR."
    ;;
esac

exit 0
<:
# Local Variables:
# mode: shell-script
# End:
:>//
