#include "variables"
#!/bin/bash -e
#
# Update AucTeX auto-loads.
# Installed by the Debian <:=${PACKAGE}:> package.
# $Id: update-auctex-elisp.in,v 1.9 2004/03/17 09:39:14 salve Exp $
#
<:=@COPYRIGHT:>//

set -o posix

<:# Default flavors: only GNU/Emacsen, XEmacs comes with its own AUC TeX.:>//
FLAVORS=${*:-"emacs21"}

for FLAVOR in ${FLAVORS}; do
    if [ -x /usr/bin/${FLAVOR} ]; then
	${FLAVOR} --no-site-file --no-init-file --batch \
		  --load=/usr/share/emacs/site-lisp/tex-site.el \
		  --funcall=TeX-auto-generate-global
    fi
done

<:# better to remove .el files now that .elc have been done:>//
rm -f $(find <:=${var}:> -type f -name \*.el)
<:
# Local Variables:
# mode: shell-script
# End:
:>//
